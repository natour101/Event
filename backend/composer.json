{
  "name": "event/backend",
  "type": "project",
  "description": "Event backend API",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "laravel/framework": "^12.0",
    "laravel/sanctum": "^4.2"
  },
  "require-dev": {
    "fakerphp/faker": "^1.23",
    "laravel/pint": "^1.13",
    "laravel/pail": "^1.2",
    "laravel/tinker": "^2.11",
    "nunomaduro/collision": "^8.8",
    "laravel/sail": "^1.52"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "extra": {
    "laravel": {
      "dont-discover": [
        "laravel/tinker"
      ]
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ]
  }
}
